<h1>Our Libraries</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Max Students</th>
      <th>Cost</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% libraries.forEach(library => { %>
    <tr>
      <td><a href="<%= `/libraries/${library._id}` %>"><%= library.title %></a></td>
      <td><%= library.description %></td>
      <td><%= library.maxStudents %></td>
      <td><%= library.cost %></td>
      <!--edit link tag-->
      <td>
        <a href="<%=`/libraries/${library._id}/edit` %>"> Edit </a>
      </td>
      <!--delete link tag-->
      <td>
        <a
          href="<%= `libraries/${library._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this library?')"
        >
          Delete
        </a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<h1>Our Libraries</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zip Code</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Website</th>
      <th>Membership Fee</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% libraries.forEach(library => { %>
    <tr>
      <td><a href="<%= `/libraries/${library._id}` %>"><%= library.name %></a></td>
      <td><%= library.address %></td>
      <td><%= library.zipCode || 'N/A' %></td>
      <td><%= library.contact.phone || 'N/A' %></td>
      <td><%= library.contact.email || 'N/A' %></td>
      <td><%= library.contact.website || 'N/A' %></td>
      <td><%= library.membershipFee %></td>
      <!-- Edit link -->
      <td>
        <a href="<%=`/libraries/${library._id}/edit` %>">Edit</a>
      </td>
      <!-- Delete link -->
      <td>
        <a
          href="<%= `/libraries/${library._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this library?')"
        >
          Delete
        </a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

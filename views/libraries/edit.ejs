<div class="container" style="width: 400px">
  <form method="POST" class="form text-center" action="<%=`/libraries/${library._id}/update?_method=PUT`%>">
    <h2 class="mb-4">EDIT LIBRARY</h2>
    
    <input
      type="text"
      class="form-control m-2"
      name="name"
      id="inputName"
      value="<%= library.name %>"
      placeholder="Library Name"
      required
    />

    <input
      type="text"
      class="form-control m-2"
      name="address"
      id="inputAddress"
      value="<%= library.address %>"
      placeholder="Address"
      required
    />

    <input
      type="number"
      class="form-control m-2"
      name="zipCode"
      id="inputZipCode"
      value="<%= library.zipCode %>"
      placeholder="Zip Code"
      min="1000"
      max="99999"
      required
    />

      <input
        type="text"
        class="form-control m-2"
        name="contact.phone"
        id="inputPhone"
        value="<%= library.contact.phone %>"
        placeholder="Phone"
      />
      <input
        type="email"
        class="form-control m-2"
        name="contact.email"
        id="inputEmail"
        value="<%= library.contact.email %>"
        placeholder="Email"
      />

      <input
        type="text"
        class="form-control m-2"
        name="contact.website"
        id="inputWebsite"
        value="<%= library.contact.website %>"
        placeholder="Website"
      />

    <h5 class="m-3">Opening Hours</h5>

    <div class="row mb-2">
    <div class="col">Monday</div>
    <div class="col">
      <input
      type="time"
      class="form-control"
      name="openingHours.monday.open"
      id="inputMondayOpen"
      value="<%= library.openingHours.monday.open %>"
    />
    </div>
    <div class="col">
      <input
      type="time"
      class="form-control"
      name="openingHours.monday.close"
      id="inputMondayClose"
      value="<%= library.openingHours.monday.close %>"
    />
    </div>
    </div>
      

    <div class="row mb-2">
      <div class="col">Tuesday</div>
    <div class="col">
      <input
      type="time"
      name="openingHours.tuesday.open"
      id="inputTuesdayOpen"
      class="form-control"
      value="<%= library.openingHours.tuesday.open %>"
    />
    </div>
    <div class="col">
      <input
        type="time"
        name="openingHours.tuesday.close"
        id="inputTuesdayClose"
        class="form-control"
        value="<%= library.openingHours.tuesday.open %>"
      />
    </div>
    </div>
      
      
    <div class="row mb-2">
      <div class="col">Wednesday</div>
      <div class="col">
        <input
        type="time"
        name="openingHours.wednesday.open"
        id="inputWednesdayOpen"
        class="form-control"
        value="<%= library.openingHours.wednesday.open %>"
      />
      </div>
      <div class="col">
        <input
        type="time"
        name="openingHours.wednesday.close"
        id="inputWednesdayClose"
        class="form-control"
        value="<%= library.openingHours.wednesday.open %>"
      />
      </div>
      </div>
      
      
    <div class="row mb-2">
      <div class="col">Thursday</div>
      <div class="col">
        <input
        type="time"
        name="openingHours.thursday.open"
        id="inputThursdayOpen"
        class="form-control"
        value="<%= library.openingHours.thursday.open %>"
      />
      </div>
      <div class="col">
        <input
        type="time"
        name="openingHours.thursday.close"
        id="inputThursdayClose"
        class="form-control"
        value="<%= library.openingHours.thursday.open %>"
      />
      </div>
      </div>
      
      
    <div class="row mb-2">
      <div class="col">Friday</div>
      <div class="col">
        <input
        type="time"
        name="openingHours.friday.open"
        id="inputFridayOpen"
        class="form-control"
        value="<%= library.openingHours.friday.open %>"
      />
      </div>
      <div class="col">
        <input
        type="time"
        name="openingHours.friday.close"
        id="inputFridayClose"
        class="form-control"
        value="<%= library.openingHours.friday.open %>"
      />
      </div>
      </div>
      
      
    <div class="row mb-2">
      <div class="col">Saturday</div>
      <div class="col">
        <input
        type="time"
        name="openingHours.saturday.open"
        id="inputSaturdayOpen"
        class="form-control"
        value="<%= library.openingHours.saturday.open %>"
      />
      </div>
      <div class="col">
        <input
        type="time"
        name="openingHours.saturday.close"
        id="inputSaturdayClose"
        class="form-control"
        value="<%= library.openingHours.saturday.open %>"
      />
      </div>
      </div>
      
      
    <div class="row mb-2">
      <div class="col">Sunday</div>
      <div class="col">
        <input
        type="time"
        name="openingHours.sunday.open"
        id="inputSundayOpen"
        class="form-control"
        value="<%= library.openingHours.sunday.open %>"
      />
      </div>
      <div class="col">
        <input
        type="time"
        name="openingHours.sunday.close"
        id="inputSundayClose"
        class="form-control"
        value="<%= library.openingHours.sunday.open %>"
      />
      </div>
      </div>
      
      

    <div class="m-3">
      <label for="inputMembershipFee" class="form-label">Membership Fee</label>
      <input
        type="number"
        class="form-control"
        name="membershipFee"
        id="inputMembershipFee"
        value="<%= library.membershipFee %>"
        min="0"
      />
    </div>

    <div class="m-3">
      <label for="inputRulesAndPolicies" class="form-label">Rules and Policies</label>
      <textarea
        class="form-control"
        name="rulesAndPolicies"
        id="inputRulesAndPolicies"
        placeholder="Rules and Policies"
      ><%= library.rulesAndPolicies %></textarea>
    </div>

    
    <button type="submit" class="btn btn-outline-dark m-3">UPDATE</button>
  </div>


  </form>
</div>

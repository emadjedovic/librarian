<h1>Library Data for <%= library.name %></h1>
<table class="table">
  <tr>
    <th>Name</th>
    <td><%= library.name %></td>
  </tr>
  <tr>
    <th>Address</th>
    <td><%= library.address %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= library.zipCode %></td>
  </tr>
  <tr>
    <th>Contact Phone</th>
    <td><%= library.contact.phone || 'N/A' %></td>
  </tr>
  <tr>
    <th>Contact Email</th>
    <td><%= library.contact.email || 'N/A' %></td>
  </tr>
  <tr>
    <th>Website</th>
    <td><%= library.contact.website || 'N/A' %></td>
  </tr>
  <tr>
    <th>Opening Hours</th>
    <td>
      <ul>
        <% if (library.openingHours) { %>
          <% for (const [day, hours] of Object.entries(library.openingHours)) { %>
            <li><%= day.charAt(0).toUpperCase() + day.slice(1) %>: Open <%= hours.open %> - Close <%= hours.close %></li>
          <% } %>
        <% } else { %>
          <li>N/A</li>
        <% } %>
      </ul>
    </td>
  </tr>
  <tr>
    <th>Membership Fee</th>
    <td><%= library.membershipFee %></td>
  </tr>
  <tr>
    <th>Rules and Policies</th>
    <td><%= library.rulesAndPolicies %></td>
  </tr>
</table>

<div class="container mt-3">
  <div>
    <a href="/libraries" class="btn btn-dark mt-1">View All Libraries</a>
  </div>
  <div>
    <a href="<%=`/libraries/${library._id}/edit`%>" class="btn btn-dark mt-1">Edit Library Details</a>
  </div>
  <div>
    <a
      href="<%= `/libraries/${library._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this library?')"
      class="btn btn-dark mt-1"
    >Delete</a>
    </div>
</div>

<h1>Subscriber Data for <%= subscriber.name %></h1>
<table class="table">
  <tr>
    <th>Name</th>
    <td><%= subscriber.name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= subscriber.email %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= subscriber.zipCode %></td>
  </tr>
</table>

<p>This subscriber has <%= subscriber.courses.length %> associated course(s).</p>

<div>
    <a href="/subscribers" class="btn btn-dark mt-1">View all subscribers</a>
  </div>
  <div>
    <a href="<%=`/subscribers/${subscriber._id}/edit`%>" class="btn btn-dark mt-1"> Edit Subscriber Details </a>
  </div>
  <div>
    <a
      href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this subscriber?')"
      class="btn btn-dark mt-1"
      >Delete</a
    >
  </div>

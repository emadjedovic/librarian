<h3>BOOK DETAILS: <%= book.title %></h3>
<table class="table">
  <tr>
    <th>Title</th>
    <td><%= book.title %></td>
  </tr>
  <tr>
    <th>Author</th>
    <td><%= book.author %></td>
  </tr>
  <tr>
    <th>ISBN</th>
    <td><%= book.ISBN %></td>
  </tr>
  <tr>
    <th>Genre</th>
    <td><%= book.genre %></td>
  </tr>
  <tr>
    <th>Published Date</th>
    <td><%= book.publishedDate.toDateString() %></td>
  </tr>
  <tr>
    <th>Pages</th>
    <td><%= book.pages %></td>
  </tr>
  <tr>
    <th>Available Copies</th>
    <td><%= book.availableCopies %></td>
  </tr>
  <tr>
    <th>Library</th>
    <td><%= book.library.name %></td>
  </tr>
  <tr>
    <th>Summary</th>
    <td><%= book.summary || "No summary available." %></td>
  </tr>
</table>

<div class="container mt-3">
  <div>
    <a href="/books" class="btn btn-outline-dark mt-1">View All Books</a>
  </div>
  <div>
    <a href="<%= `/books/${book._id}/edit` %>" class="btn btn-outline-dark mt-1">Edit Book Details</a>
  </div>
  <div>
    <a
      href="<%= `/books/${book._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this book?')"
      class="btn btn-outline-dark mt-1"
    >Delete</a>
  </div>
</div>

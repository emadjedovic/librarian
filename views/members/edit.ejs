<!-- apply the existing members attribute values in edit form-->
<!-- submit the form with a POST method to the /members/:id/update?_method=PUT route.  -->

<div class="container" style="width: 400px">
  <form method="POST" class="form text-center" action="<%=`/members/${member._id}/update?_method=PUT`%>">
    <h2>Edit member:</h2>
    <input
      type="text"
      class="form-control m-2"
      name="firstName"
      id="inputFirstName"
      value="<%=member.firstName %>"
      placeholder="First"
      autofocus
    />
    <input
      type="text"
      class="form-control m-2"
      name="lastName"
      id="inputLastName"
      value="<%=member.lastName %>"
      placeholder="Last"
    />
    <input
      type="password"
      class="form-control m-2"
      name="password"
      id="inputPassword"
      value="<%= member.password %>"
      placeholder="Password"
      required
    />
    <input
      type="email"
      class="form-control m-2"
      name="email"
      id="inputEmail"
      value="<%=member.email %>"
      placeholder="Email address"
      required
    />
    <input
      type="text"
      class="form-control m-2"
      name="zipCode"
      id="inputZipCode"
      pattern="\d*"
      value="<%= member.zipCode %>"
      placeholder="Zip Code"
      required
    />
    <button type="submit" class="btn btn-dark m-2">UPDATE</button>
  </form>
</div>

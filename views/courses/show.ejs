<h1>Course Data for <%= course.title %></h1>
<table class="table">
  <tr>
    <th>Title</th>
    <td><%= course.title %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= course.description %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= course.zipCode %></td>
  </tr>
</table>

<% if (course.items) { %>
<h3>ITEMS</h3>
<% course.items.forEach((item) => { %> <%= item %> | <% }) %> <% } %>

<div class="container mt-3">
  <div>
    <a href="/courses">View all courses</a>
  </div>
  <div>
    <a href="<%=`/courses/${course._id}/edit`%>"> Edit Course Details </a>
  </div>
  <div>
    <a
      href="<%= `/courses/${course._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this course?')"
      >Delete</a
    >
  </div>
</div>

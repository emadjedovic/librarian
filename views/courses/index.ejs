<h1>Our Courses</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Zip Code</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(course => { %>
    <tr>
      <td><a href="<%= `/courses/${course._id}` %>"><%= course.title %></a></td>
      <td><%= course.description %></td>
      <td><%= course.zipCode %></td>
      <!--edit link tag-->
      <td>
        <a href="<%=`/courses/${course._id}/edit` %>"> Edit </a>
      </td>
      <!--delete link tag-->
      <td>
        <a
          href="<%= `courses/${course._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this course?')"
        >
          Delete
        </a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
